<?xml version="1.0" encoding="UTF-8"?>
<svg
  xmlns="http://www.w3.org/2000/svg"
  width="600"
  height="600"
  viewBox="-150 -150 300 300">

  <!-- Background transparent, guide circle for center -->
  <g fill="none" stroke="black" stroke-width="1">

    <!-- Center point -->
    <circle cx="0" cy="0" r="1.5" />

    <!-- Main turning arc (1" radius equivalent in abstract units) -->
    <!-- You’ll scale this in Foundry to match inches -->
    <!-- We draw arcs at 15°, 30°, 45°, 90° from the “forward” direction (up) -->

    <!-- Base circle guide (optional, can be removed) -->
    <circle cx="0" cy="0" r="100" stroke="#cccccc" stroke-dasharray="4 4"/>

    <!-- Tick marks & labels along the arc -->

    <!-- 15° tick -->
    <line x1="0" y1="-100" x2="0" y2="-90" stroke="black" stroke-width="2" />
    <text x="0" y="-105" font-size="10" text-anchor="middle" dominant-baseline="central">15°</text>

    <!-- 30° tick -->
    <line x1="51.76" y1="-86.60" x2="46.58" y2="-77.96" stroke="black" stroke-width="2" />
    <text x="56.76" y="-95.60" font-size="10" text-anchor="middle" dominant-baseline="central">30°</text>

    <!-- 45° tick -->
    <line x1="70.71" y1="-70.71" x2="63.64" y2="-63.64" stroke="black" stroke-width="2" />
    <text x="77.71" y="-77.71" font-size="10" text-anchor="middle" dominant-baseline="central">45°</text>

    <!-- 90° tick -->
    <line x1="100" y1="0" x2="90" y2="0" stroke="black" stroke-width="2" />
    <text x="110" y="0" font-size="10" text-anchor="middle" dominant-baseline="central">90°</text>

    <!-- Outer arc from 0° to 90° (forward = up, right turn) -->
    <path
      d="M 0 -100
         A 100 100 0 0 1 100 0"
      stroke="black"
      stroke-width="3"
      fill="none" />

  </g>

  <!-- Reference car rectangle at the start of the arc -->
  <g transform="translate(0,-100) rotate(0)">
    <rect x="-10" y="-20" width="20" height="40" fill="none" stroke="black" stroke-width="2"/>
    <line x1="0" y1="-20" x2="0" y2="-40" stroke="black" stroke-width="2" />
  </g>

</svg>
